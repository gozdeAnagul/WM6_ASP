@model Employee
@{
    ViewBag.Title = "Guncelle";
}

<div class="container">
    <div><h2>@Html.Raw(ViewBag.Message)</h2></div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Guncelle", "Employee", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.EmployeeID)
                <div class="form-group">
                    <label for="CategoryName">Category Name</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Ad" })
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyad" })
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Adres" })
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(x => x.HomePhone, new { @class = "form-control", placeholder = "Telefon" })
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-warning">Update</button>
                </div>
            }
        </div>
    </div>
</div>